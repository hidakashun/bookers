<p id="notice"></p>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

  <% @books.each do |book| %>

    <tr>
      <td>
        <span><%= book.title %></span>
      </td>
      <td>
        <span><%= book.body %></span>
      </td>
      <td><%= link_to "Show", "/books/#{book.id}" %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", "/books/#{book.id}" %></td>
    </tr>
 <% end %>

  </tbody>
</table>

<h2>New book</h2>
<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>